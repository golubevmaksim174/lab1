    <script>
        // Функция для загрузки внешних изображений
        function loadExternalImage(placeholderId, imageUrl, altText) {
            const placeholder = document.getElementById(placeholderId);
            const img = new Image();
            
            img.onload = function() {
                // Создаем элемент изображения
                const newImg = document.createElement('img');
                newImg.src = imageUrl;
                newImg.alt = altText;
                newImg.className = placeholder.className.replace('img-placeholder', '');
                
                // Заменяем плейсхолдер на изображение
                placeholder.parentNode.replaceChild(newImg, placeholder);
            };
            
            img.onerror = function() {
                alert('Не удалось загрузить изображение. Проверьте подключение к интернету.');
            };
            
            img.src = imageUrl;
        }
        
        // Автоматическая попытка загрузки изображений при загрузке страницы
        window.addEventListener('load', function() {
            // Проверяем, загрузились ли изображения
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                if (!img.complete || img.naturalHeight === 0) {
                    // Если изображение не загрузилось, показываем плейсхолдер
                    const src = img.getAttribute('src');
                    const alt = img.getAttribute('alt');
                    const className = img.className;
                    
                    // Создаем ID для плейсхолдера на основе имени файла
                    const placeholderId = 'placeholder-' + src.replace(/[^a-zA-Z0-9]/g, '-');
                    
                    // Создаем плейсхолдер
                    const placeholder = document.createElement('div');
                    placeholder.id = placeholderId;
                    placeholder.className = className + ' img-placeholder';
                    placeholder.innerHTML = `
                        <div>
                            <p>${alt}</p>
                            <button class="image-load-btn" onclick="loadExternalImage('${placeholderId}', '${src}', '${alt}')">Загрузить изображение</button>
                        </div>
                    `;
                    
                    // Заменяем изображение плейсхолдером
                    img.parentNode.replaceChild(placeholder, img);
                }
            });
        });
    </script>
</body>
</html>
